@model AppVPN.ViewModels.Tarifs.CreateTarifViewModel

@{
    ViewData["Title"] = "Создание - Тариф";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Countries" asp-action="Index">Страны</a></li>
        <li class="breadcrumb-item"><a asp-controller="Tarifs" asp-action="Index">Тарифы</a></li>
        <li class="breadcrumb-item"><a asp-controller="Prices" asp-action="Index">Цена</a></li>
        <li class="breadcrumb-item active">Создание</li>
    </ol>
</nav>

<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Добавление страны
</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TarifName" class="control-label"></label>
                <input asp-for="TarifName" class="form-control" />
                <span asp-validation-for="TarifName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessCountryId" class="control-label"></label>
                <select asp-for="AccessCountryId" class="form-control" asp-items="ViewBag.AccessCountryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
